		block styles
	body
		nav.navbar.navbar-inverse
			.container-fluid
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/') GeMN
					img(class='mini-ancora' src='/images/ancora_logo.png')
				#bs-example-navbar-collapse-1.collapse.navbar-collapse
					ul.nav.navbar-nav.navbar-right.menua
						if (cookie.perfil == 'cliente')			
							li(class=cliente)
								a(href='/cliente')
									| Cliente
									span.sr-only (current)
							li(class=logout)
								a(href='/logout')
									| Logout
									span.sr-only (logout)
						else if (cookie.perfil == 'usuario')
							li(class=usuario)
								a(href='/usuario')
									| Usu√°rio
									span.sr-only (current)
							li(class=logout)
								a(href='/logout')
									| Logout
									span.sr-only (logout)
						else if (cookie.perfil == 'empresa')
							li(class=empresa)
								a(href='/empresa')
									| Empresa
									span.sr-only (current)
							li(class=logout)
								a(href='/logout')
									| Logout
									span.sr-only (logout)
						else
							li(class=login)
								a(href='/')
									| Login
									span.sr-only (current)	
							li(class=cadastro)
								a(href='/cadastro')
									| Cadastro
									span.sr-only (current)	

